    "preview": "STANDALONE=true node standalone-dist/index"
  },
  "dependencies": {
    "@types/express-http-proxy": "^1.6.3",
    "@vercel/ncc": "^0.36.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-http-proxy": "^1.6.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.21",
    "typescript": "^4.9.3"
  }
}
